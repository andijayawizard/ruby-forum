<div class="table-container">
  <h3>
    Data
    <small><%= @title %></small>
  </h3>
  <%= link_to 'Lihat Siswa', students_path, class: 'link' %> |
  <%= link_to 'Tambah Siswa', new_student_path, class: 'link' %>
  <table id="dynamic-table" class="table table-striped table-hover table-sm">
    <thead>
      <tr>
        <td></td>
        <td>Nama</td>
        <td>NIM</td>
        <td>Email</td>
        <td>Telepon</td>
        <td>Alamat</td>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |s| %>
        <tr>
          <td>
            <%= link_to 'Detail', student_path(s), class: 'link' %> |
            <%= link_to 'Edit', edit_student_path(s), class: 'link' %> |
            <%= link_to "Delete", student_path(s), method: :delete, data: {
              confirm: "Siswa #{s.name} akan dihapus"
            } %>
          </td>
          <td><%= s.name %></td>
          <td><%= s.nim %></td>
          <td><%= s.email %></td>
          <td><%= s.phone %></td>
          <td><%= s.address %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
